
<div class="container">
  <div class="columns is-multiline">
    <div class="column is-6 is-offset-3">
      <div class="content">
        <h1> <%= @article.title %> </h1>
      </div>
    </div>

    <%= render @article, show: true %>

    <% @article.comments.each do |comment| %>
      <div class="column is-4 is-offset-4">
        <article class="media">
          <div class="media-content">
            <div class="content">
              <p>
                <strong><% comment.commenter%></strong> <small>31m</small>
                <br>
                <%= comment.body %>
              </p>
            </div>
            <nav class="level is-mobile">
              <div class="level-left">
                <a class="level-item">
                  <span class="icon is-small"><i class="fas fa-edit"></i></span>
                </a>
                <a class="level-item">
                  <span class="icon is-small"><i class="far fa-trash-alt"></i></i></span>
                </a>
            </nav>
          </div>
        </article>
      </div>
    <% end %>

    <div class="column is-4 is-offset-4">
      <article class="media">
        <div class="media-content">
          <%= form_with model: [@article, @article.comments.build], local: true do |form| %>
            <div class="field">
              <p class="control">
                <%= form.text_field :commenter, class: "input", placeholder: "Commenter" %>
              </p>
            </div>
            <div class="field">
              <p class="control">
                <%= form.text_area :body, class: "textarea", placeholder: "Add comment..." %>
              </p>
            </div>
            <nav class="level">
              <div class="level-left">
                <div class="level-item">
                  <%= form.submit "Comment", class: "button is-info" %>
                </div>
              </div>
            </nav>
          <% end %>
        </div>
      </article>
    </div>
  </div>
</div>

