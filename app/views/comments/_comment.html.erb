<div class="column is-4 is-offset-4">
  <article class="media">
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= comment.commenter%></strong> <small><%= comment.created_at %></small>
          <br>
          <%= comment.body %>
        </p>
      </div>
      <nav class="level is-mobile">
        <div class="level-left">
          <%= link_to edit_article_comment_path(comment.article, comment), class: "level-item" do  %>
            <span class="icon is-small"><i class="fas fa-edit"></i></span>
          <% end %>

          <%= link_to  article_comment_path(comment.article.id, comment.id), method: :delete,
          class: "level-item", data: { confirm: "Are you sure you want to delete this comment?" } do %>
            <span class="icon is-small"><i class="far fa-trash-alt"></i></i></span>
          <% end %>
        </div>
      </nav>
    </div>
  </article>
</div>
