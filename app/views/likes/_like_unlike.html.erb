<% pre_like = @article.likes.find { |like| like.user_id == current_user.id } %>
<% if pre_like %>
  <%= link_to article_like_path(@article, pre_like), method: :delete, class: "card-footer-item" do %>
    <span class="icon is-small"><i class="fas fa-heart">liked</i></span>
  <% end %>
<% else %>
  <%= link_to article_likes_path(@article), method: :post, class: "card-footer-item" do %>
    <span class="icon is-small"><i class="far fa-heart"></i></span>
  <% end %>
<% end %>
